 <form class="login-form" method="POST" action="/movies/<%= @movie.id %>/reviews/new">
 <%= @movie.id %>
  <div class="form-group">
    <label for"rating">Movie Rating</label>
    <input type="number" name="rating" class="form-control" placeholder="Enter your rating: 0-5">
  </div>
  <div class="form-group">
    <textarea name="text" class="form-control" rows="3" placeholder="Type your review here"></textarea>
<button class="submit" type"submit">Submit</button>

  </div>
    
</form>